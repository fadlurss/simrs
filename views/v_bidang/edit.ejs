<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit Bidang Pegawai</h1>

        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit Bidang Pegawai
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form class="form-horizontal" role="form" action="/bidang/<%= bidang_edit_id._id %>?_method=PUT"
                        method="POST" id="tambah_bidang">
                        <div class="form-group">
                            <label for="" class="col-sm-3">Nama Bidang Pegawai</label>
                            <div class="col-sm-9">
                                <input type="text" name="nama_bidang" required class="form-control" value="<%= bidang_edit_id.nama_bidang %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button class="btn btn-info btn-block">Update</button>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<% include ../partials/admin/footer %>