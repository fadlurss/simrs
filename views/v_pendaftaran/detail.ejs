<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Detail Pendaftaran Pasien</h1>

        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Biodata Pasien
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover js-serial" id="datatable">
                        <tr>
                            <td width='200'>No Rawat</td>
                            <td>
                                <%= data_pendaftaran.no_rawat %>
                            </td>
                        </tr>
                        <tr>
                            <td width='200'>No Rekamedis</td>
                            <td>
                                <%= data_pendaftaran.id_pasien.no_rm %>
                            </td>
                        </tr>
                        <tr>
                            <td width='200'>Nama Pasien</td>
                            <td>
                                <%= data_pendaftaran.id_pasien.nama_pasien %>
                            </td>
                        </tr>
                    </table>

                </div>

                <!-- /.panel-body -->
            </div>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                Input Tindakan
            </button> <br><br>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Daftar barang yang dibeli
                </div>
                <!-- /.panel-heading -->

                <div class="panel-body table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover js-serial" id="datatable">
                        <thead>
                            <tr>
                                <th>Nama Barang</th>
                                <th>Qty</th>
                                <th>Harga</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>

                                </td>
                                <td>

                                </td>
                                <td>

                                </td>
                            </tr>

                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Input Tindakan</h4>
            </div>
            <form class="form-horizontal" role="form" action="/pendaftaran/new_riwayattindakan" method="POST" id="tambah_pendaftaran">
                <div class="modal-body">
                    <table class="table table-bordered">
                        <input value="<%= data_pendaftaran.no_rawat %>" type="hidden" name="no_rawat">
                        <input value="<%= data_pendaftaran.id %>" type="hidden" name="id_detail_pendaftaran">
                        <tr>
                            <td width="200">Dilakukan Oleh</td>
                            <td>
                                <select name="tindakan_oleh" id="tindakan_oleh_by">
                                    <option value="vc">-- Pilih --</option>
                                    <option value="Dokter">Dokter</option>
                                    <option value="Petugas">Petugas</option>
                                    <option value="Dokter dan Petugas">Dokter dan Petugas</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Nama Tindakan</td>
                            <td>
                                <input type="text" required placeholder="Masukan Nama Tindakan" name="nama_tindakan" id="cari_tindakan"
                                    class="form-control ui-autocomplete-input"><input type="text" name="id_tindakan" id="id_tindakan"
                                    class="form-control ui-autocomplete-input">
                            </td>
                        </tr>
                        <tr>
                            <td>Hasil Periksa</td>
                            <td><input type="text" required name="hasil_periksa" placeholder="masukan hasil Periksa"
                                    class="form-control"></td>
                        </tr>
                        <tr>
                            <td>Perkembangan</td>
                            <td><input type="text" required name="perkembangan" placeholder="masukan perkembangan sekarang"
                                    class="form-control"></td>
                        </tr>
                    </table>

                    <table class="table table-bordered" id="hidden_div" style="display: none;">
                        <div class="form-group">
                            <tr>
                                <td width="200">Masukan Nama Dokter</td>
                                <td><input type="text" name="nama_dokter" id="cari_dokter" placeholder="Masukan Nama Dokter"
                                        class="form-control">
                                    <input type="hidden" name="id_dokter" id="id_dokter" class="form-control"></td>
                            </tr>
                        </div>
                    </table>

                    <table class="table table-bordered" id="hidden_div2" style="display: none;">
                        <div class="form-group">
                            <tr>
                                <td width="200">Masukan Nama Pegawai</td>
                                <td><input type="text" name="nama_petugas" id="cari_petugas" placeholder="Masukan Nama Petugas"
                                        class="form-control">
                                    <input type="hidden" name="id_pegawai" id="id_petugas" class="form-control"></td>
                            </tr>
                        </div>
                    </table>

                    <table class="table table-bordered" id="hidden_div3" style="display: none;">
                        <div>
                            <tr>
                                <td width="200">Masukan Nama Dokter</td>
                                <td><input type="text" id="cari_dokter2" name="nama_dokter" placeholder="Masukan Nama Dokter"
                                        class="form-control"><input type="hidden" name="id_dokter2" id="id_dokter2"
                                        class="form-control"></td>
                            </tr>
                            <tr>
                                <td width="200">Masukan Nama Petugas</td>
                                <td><input type="text" id="cari_petugas2" name="nama_petugas" placeholder="Masukan Nama Petugas"
                                        class="form-control"><input type="hidden" name="id_pegawai2" id="id_petugas2"
                                        class="form-control"></td>
                            </tr>
                        </div>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Tutup</button>
                    <button type="submit" class="btn btn-primary">Simpan Data</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/admin/footer %>