<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Data Dokter</h1>
            <br><br>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="help-block">
        <a href="/dokter/new" class="btn btn-info">Tambah Data Dokter</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Dokter Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover js-serial" id="datatable">
                        <thead>
                            <tr>
                                <th>Nama dokter</th>
                                <th>Jenis kelamin</th>
                                <th>No HP</th>
                                <th>Spesialis</th>
                                <th>No izin praktek</th>
                                <th>Tarif</th>
                                <th>Gaji pokok</th>
                                <th width="120px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data_dokter.forEach(function(hasil){ %>
                            <tr>
                                <td>
                                    <%= hasil.nama_dokter %>
                                </td>
                                <td>
                                    <%= hasil.jenis_kelamin %>
                                <td>
                                    <%= hasil.no_hp %>
                                </td>
                                <td>
                                    <%= hasil.spesialis.nama_spesialis %>
                                </td>
                                <td>
                                    <%= hasil.no_izin_praktek%>
                                </td>
                                <td>
                                    <%= hasil.tarif_dokter%>
                                </td>
                                <td>
                                    <%= hasil.gaji_pokok%>
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" href="/dokter/<%= hasil._id %>/edit"><i
                                            class="fa fa-pencil-square-o"></i></a>
                                    <a class="btn btn-white btn-sm" href="">
                                        <form action="/dokter/<%= hasil._id %>?_method=DELETE" method="POST"
                                            class="delete-form">
                                            <button class="btn btn-danger btn-sm"
                                                onclick="return confirm('Apakah Kamu Yakin Ingin Menghapus Data <%= hasil.nama_dokter %> ?')"><i
                                                    class="fa fa-trash-o"></i></button>
                                        </form>
                                    </a>

                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->
<% include ../partials/admin/footer %>