<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Data Pasien</h1>
            <br><br>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="help-block">
        <a href="/pasien/new" class="btn btn-info">Tambah Pasien baru</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Pasien Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="datatable">
                        <thead>
                            <tr>
                                <th>Awal berobat</th>
                                <th>No RM</th>
                                <th>No RM lama</th>
                                <th>Nama pasien</th>
                                <th>Tanggal lahir</th>
                                <th>Umur</th>
                                <th>Alamat</th>
                                <th>Pekerjaan</th>
                                <th>No HP</th>
                                <th width="120px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data_pasien.forEach(function(hasil){ %>
                            <tr>
                                <td>
                                    <%= moment(hasil.awal_berobat).format('LL') %>
                                </td>
                                <td>
                                    <%= hasil.no_rm %>
                                </td>
                                <td>
                                    <%= hasil.no_rm_lama %>
                                </td>
                                <td>
                                    <%= hasil.nama_pasien %>
                                </td>
                                <td>
                                    <%= moment(hasil.tanggal_lahir).format('LL') %>
                                </td>
                                <td>
                                    <%= hasil.umur %>
                                </td>
                                <td style="width:90px;">
                                    <div class=scrollable>
                                        <%= hasil.alamat %>
                                    </div>
                                </td>
                                <td>
                                    <%= hasil.pekerjaan %>
                                </td>
                                <td>
                                    <%= hasil.no_hp %>
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" href="/pasien/<%= hasil._id %>/edit"><i class="fa fa-pencil-square-o"></i></a>
                                    <a class="btn btn-white btn-sm" href="">
                                        <form action="/pasien/<%= hasil._id %>?_method=DELETE" method="POST" class="delete-form">
                                            <button class="btn btn-danger btn-sm" onclick="return confirm('Apakah Kamu Yakin Ingin Menghapus Data <%= hasil.nama_pasien %> ?')"><i
                                                    class="fa fa-trash-o"></i></button>
                                        </form>
                                    </a>

                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->
<% include ../partials/admin/footer %>