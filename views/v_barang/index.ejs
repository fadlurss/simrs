<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Data Barang</h1>
            <br><br>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="help-block">
        <a href="/barang/new" class="btn btn-info">Tambah barang baru</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover js-serial" id="datatable">
                        <thead>
                            <tr>
                                <th>Nama barang</th>
                                <th>Stok</th>
                                <th>Stok minimum</th>
                                <th>Harga modal</th>
                                <th>Harga jual</th>
                                <th>Kategori barang</th>
                                <th width="120px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data_item.forEach(function(hasil){ %>
                            <tr>
                                <td>
                                    <%= hasil.nama_barang %>
                                </td>
                                <td>
                                    <%= hasil.stok %>
                                </td>
                                <td>
                                    <%= hasil.stok_minimum %>
                                </td>
                                <td>
                                    Rp
                                    <%= hasil.harga_modal %>
                                </td>
                                <td>
                                    Rp
                                    <%= hasil.harga_jual %>
                                </td>
                                <td>
                                    <%= hasil.id_kategori_barang.nama_kategori %>
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" href="/barang/<%= hasil._id %>/edit"><i class="fa fa-pencil-square-o"></i></a>
                                    <a class="btn btn-white btn-sm" href="">
                                        <form action="/barang/<%= hasil._id %>?_method=DELETE" method="POST" class="delete-form">
                                            <button class="btn btn-danger btn-sm" onclick="return confirm('Apakah Kamu Yakin Ingin Menghapus Data <%= hasil.nama_barang  %> ?')"><i
                                                    class="fa fa-trash-o"></i></button>
                                        </form>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->
<% include ../partials/admin/footer %>