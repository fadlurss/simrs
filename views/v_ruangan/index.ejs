<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Data Ruang Rawat Inap</h1>
            <br><br>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="help-block">
        <a href="/ruangan/new" class="btn btn-info">Tambah ruangan baru</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ruang Rawat Inap Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="datatable">
                        <thead>
                            <tr>
                                <th>Kode Ruang</th>
                                <th>Nama Ruangan</th>
                                <th>Nama Gedung</th>
                                <th>Kelas</th>
                                <th>Tarif</th>
                                <th width="120px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data_ruangan.forEach(function(hasil){ %>
                            <tr>
                                <td>
                                    <%= hasil.kode_ruang_rawat_inap %>
                                </td>
                                <td>
                                    <%= hasil.nama_ruangan %>
                                </td>
                                <td>
                                    <%= hasil.kode_gedung_rawat_inap.nama_gedung %>
                                </td>
                                <td>
                                    <%= hasil.kelas %>
                                </td>
                                <td>
                                    <%= hasil.tarif %>
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" href="/ruangan/<%= hasil._id %>/edit"><i class="fa fa-pencil-square-o"></i></a>
                                    <a class="btn btn-white btn-sm" href="">
                                        <form action="/ruangan/<%= hasil._id %>?_method=DELETE" method="POST">
                                            <button class="btn btn-danger btn-sm" onclick="return confirm('Apakah Kamu Yakin Ingin Menghapus Data <%= hasil.nama_ruangan %> ?')"><i
                                                    class="fa fa-trash-o"></i></button>
                                        </form>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->
<% include ../partials/admin/footer %>