<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Data Tindakan</h1>
            <br><br>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="help-block">
        <a href="/tindakan/new" class="btn btn-info">Tambah tindakan baru</a>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Tindakan Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover js-serial" id="datatable">
                        <thead>
                            <tr>
                                <th>Nama Tindakan</th>
                                <th>Jenis Tindakan</th>
                                <th>Kategori Tindakan</th>
                                <th>Tarif</th>
                                <th>Tindakan oleh</th>
                                <th>Poliklinik</th>
                                <th width="120px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data_tindakan.forEach(function(hasil){ %>
                            <tr>
                                <td>
                                    <%= hasil.nama_tindakan %>
                                </td>
                                <td>
                                    <%= hasil.jenis_tindakan %>
                                </td>
                                <td>
                                    <%= hasil.kode_kategori_tindakan.kategori_tindakan %>
                                </td>
                                <td>
                                    <%= hasil.tarif %>
                                </td>
                                <td>
                                    <%= hasil.tindakan_oleh %>
                                </td>
                                <td>
                                    <%= hasil.id_poliklinik.nama_poliklinik %>
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" href="/tindakan/<%= hasil._id %>/edit"><i class="fa fa-pencil-square-o"></i></a>
                                    <a class="btn btn-white btn-sm" href="">
                                        <form action="/tindakan/<%= hasil._id %>?_method=DELETE" method="POST" class="delete-form">
                                            <button class="btn btn-danger btn-sm" onclick="return confirm('Apakah Kamu Yakin Ingin Menghapus Data <%= hasil.nama_tindakan %> ?')"><i
                                                    class="fa fa-trash-o"></i></button>
                                        </form>
                                    </a>

                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->
<% include ../partials/admin/footer %>