<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit Gejala Penyakit</h1>

        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit Gejala Penyakit
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form class="form-horizontal" role="form" enctype="multipart/form-data"
                        action="/gejalapakar/<%= cari_gejalapakar._id %>?_method=PUT" method="POST" id="tambah_barang">
                        <div class="form-group">
                            <label for="" class="col-sm-3">Kode gejala</label>
                            <div class="col-sm-9">
                                <input type="text" name="kode_gejala" required class="form-control"
                                    value="<%= cari_gejalapakar.kode_gejala %>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-3">Nama gejala</label>
                            <div class="col-sm-9">
                                <input type="text" name="nama_gejala" required class="form-control"
                                    value="<%= cari_gejalapakar.nama_gejala %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="" class="col-sm-3">Bobot</label>
                            <div class="col-sm-9">
                                <input type="text" name="bobot" required class="form-control"
                                    value="<%= cari_gejalapakar.bobot %>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-3">Image</label>
                            <div class="col-sm-9">
                                <input type="file" id="image" class="form-control" name="image"
                                    value="<%= cari_gejalapakar.image %>" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button class="btn btn-info btn-block">Update</button>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<% include ../partials/admin/footer %>