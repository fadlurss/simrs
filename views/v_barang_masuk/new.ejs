<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tambah stok opname</h1>

        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <form class="form-horizontal" role="form" action="/stokopname/new" method="POST" id="tambah_stokopname">
                        <div class="form-group">
                            <label for="" class="col-sm-3">Supplier</label>
                            <div class="col-sm-9">
                                <select name="id_supplier" id="" class="form-control" id="">
                                    <% data_supplier.forEach(function(hasil){ %>
                                    <option value="<%= hasil.id %>">
                                        <%= hasil.nama_supplier %>
                                    </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="" class="col-sm-3">Nama Barang</label>
                            <div class="col-sm-9">
                                <input type="text" name="nama_barang" required class="form-control" value="<%= data_barang.nama_barang %>">
                                <input type="hidden" name="id_barang" required class="form-control" value="<%= data_barang.id %>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-3">Harga modal</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <span class="input-group-addon">Rp</span>
                                    <input type="number" name="harga_modal" min="100" id="a1" value="<%= data_barang.harga_modal %>"
                                        required class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-3">Total masuk</label>
                            <div class="col-sm-9">
                                <input type="number" name="total_masuk" min="1" id="a2" onblur="calculate()" required
                                    class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-3">Total bayar</label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <span class="input-group-addon">Rp</span>
                                    <input type="number" name="total_bayar" id="a3" min="100" required class="form-control">
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button class="btn btn-info btn-block">Save</button>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<% include ../partials/admin/footer %>