<% include ../partials/admin/header %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Jual obat</h1>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Tambah obat
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <form class="form-horizontal" role="form" action="/penjualan/new" method="POST" id="tambah_penjualanobat">

                        <div class="form-group">
                            <label for="" class="col-sm-3">No Faktur</label>
                            <div class="col-sm-9">
                                <input type="text" name="no_faktur" required class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="" class="col-sm-3">Nama Barang</label>
                            <div class="col-sm-9">
                                <input type="text" name="nama_barang" id="cari_item" required class="form-control">
                                <input type="text" hidden name="id_barang" id="id_item">
                                <input type="text" hidden name="harga_barang" id="harga_item">
                                <input type="text" hidden name="harga_modal" id="harga_modal">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="" class="col-sm-3">Stok Tersedia</label>
                            <div class="col-sm-9">
                                <input type="text" readonly name="stok_barang" id="cari_stok_item" required class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="" class="col-sm-3">Qty barang yang ingin dibeli</label>
                            <div class="col-sm-9">
                                <input type="number" name="total_keluar" min="1" id="a2" onblur="calculate()" required
                                    class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button class="btn btn-info btn-block">Simpan barang</button>
                            </div>
                        </div>

                    </form>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Data barang yang dibeli
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover js-serial" id="datatable">
                        <thead>
                            <tr>
                                <th>Nama barang</th>
                                <th>Jumlah barang</th>
                                <th>Harga</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data_barang_keluar.forEach(function(hasil){ %>
                            <tr>
                                <td>
                                    <%= hasil %>
                                </td>
                                <td>

                                </td>

                                <td>
                                </td>
                                <td>

                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<% include ../partials/admin/footer %>